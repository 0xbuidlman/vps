#!/bin/bash    
# this file contains all commands to compile and install the daemon

chmod u+x ./autogen.sh share/genbuild.sh && ./autogen.sh
./configure --disable-dependency-tracking --enable-tests=no --without-gui --without-miniupnpc --with-incompatible-bdb CFLAGS="-march=native" LIBS="-lssl -lcrypto -lz"
make
make install